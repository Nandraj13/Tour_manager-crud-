<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_addholiday">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD HOLIDAY"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/addholidaytext"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Place name"
        android:id="@+id/addplacename"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/addholidaytext"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:hint="Description"
        android:id="@+id/addplacedescription"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/addplacename"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Price"
        android:id="@+id/addplaceprice"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/addplacedescription"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Days"
        android:id="@+id/addplacedays"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/addplaceprice"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="170dp"
        android:layout_below="@id/addplacedays"
        android:layout_centerHorizontal="true"
        android:id="@+id/addplaceimage"
        android:layout_marginTop="20dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Holiday Place"
        android:id="@+id/addholidaybutton"
        android:layout_below="@id/addplaceimage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />



</RelativeLayout>